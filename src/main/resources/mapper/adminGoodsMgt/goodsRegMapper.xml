<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.adminGoodsMgt.GoodsRegDaoImpl">

<!-- 상품 구분에 해당하는 상품 분류 가지고 오기 -->
<select id="selectGoodsSeparate" parameterType="String" resultType="com.vo.common.CmmnVO">
SELECT *
  FROM CMCD_MGT
 WHERE CM_UPCD = #{goodsGroup}
</select>

<!-- 상품이미지,상세설명의 파일을 포함한 상품등록하기 -->
<insert id="insertGoodsReg" parameterType="com.vo.adminGoodsMgt.GoodsRegVO">
INSERT INTO GOODS_INFO
		(GD_NO
		,GD_GP
		,GD_SP
		,GD_NM
		,GD_CNT
		,GD_PAGE
		,GD_THICK
		,GD_WR
		,GD_PB
		,GD_DC
		,GD_YN
		<if test='gdImg != null'>
		,GD_IMG
		</if>
		<if test='gdDetl != null'>
		,GD_DETL
		</if>)
VALUES
	(TO_CHAR(GOODS_INFO_SEQ.NEXTVAL)
	 ,#{gdGp}
	 ,#{gdSp}
	 ,#{gdNm}
	 ,#{gdCnt}
	 ,#{gdPage}
	 ,#{gdThick}
	 ,#{gdWr}
	 ,#{gdPb}
	 ,#{gdDc}
	 ,'Y'
	 <if test='gdImg != null'>
	 ,#{gdImg}
	 </if>
	 <if test='gdDetl != null'>
	 ,#{gdDetl}
	</if>)
</insert>

</mapper>
